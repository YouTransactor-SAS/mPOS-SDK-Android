<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".transactionView.WaitCard">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:id="@+id/gridLayoutNFC"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_rowWeight="2" >

            <Space
                android:layout_column="0"
                android:layout_columnWeight="2"
                android:layout_row="1"
                android:layout_rowWeight="1" />

            <ImageView
                android:id="@+id/imageViewNFC"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:contentDescription="@string/wait_card_logo"
                android:layout_column="1"
                android:layout_columnWeight="3"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:src="@drawable/nfc_logo_centered" />

            <Space
                android:layout_column="2"
                android:layout_columnWeight="2"
                android:layout_row="1"
                android:layout_rowWeight="1" />

        </GridLayout>


        <GridLayout
            android:id="@+id/gridLayoutLeds"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_rowWeight="1" >

            <Space
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:layout_rowWeight="1" />

            <Space
                android:layout_height="57dp"
                android:layout_row="1"
                android:layout_rowWeight="2"
                android:layout_column="0"
                android:layout_columnWeight="4" />

            <ImageView
                android:id="@+id/led1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/led_selector"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_rowWeight="1"  />

            <Space
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_rowWeight="1" />

            <ImageView
                android:id="@+id/led2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/led_selector"
                android:clickable="true"
                android:focusable="true"
                android:layout_column="3"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_rowWeight="1"  />

            <Space
                android:layout_column="4"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_rowWeight="1" />

            <ImageView
                android:id="@+id/led3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/led_selector"
                android:clickable="true"
                android:focusable="true"
                android:layout_column="5"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_rowWeight="1"  />

            <Space
                android:layout_column="6"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_rowWeight="1" />

            <ImageView
                android:id="@+id/led4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/led_selector"
                android:clickable="true"
                android:focusable="true"
                android:layout_column="7"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_rowWeight="1"  />

            <Space
                android:layout_column="8"
                android:layout_columnWeight="4"
                android:layout_row="1"
                android:layout_rowWeight="1" />

            <Space
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="2"
                android:layout_rowWeight="3" />

        </GridLayout>

        <GridLayout
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:layout_rowWeight="2" >

            <Space
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:layout_rowWeight="1" />

            <TextView
                android:id="@+id/textViewAmount"
                android:text="$ 0.00"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:textColor="@color/black"
                android:autoSizeTextType="uniform"
                android:gravity="center|top"
                android:textAlignment="gravity"
                android:layout_column="2"
                android:layout_row="1"
                android:layout_columnWeight="30"
                android:layout_rowWeight="5" />


            <Space
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="2"
                android:layout_rowWeight="1" />

            <Space
                android:layout_column="3"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_rowWeight="1" />

        </GridLayout>


        <GridLayout
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="4"
            android:layout_rowWeight="1" >

            <Space
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:layout_rowWeight="1" />

            <Space
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_rowWeight="1" />

            <TextView
                android:id="@+id/textViewMsg"
                android:text="Tap, insert or swipe card"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:autoSizeTextType="uniform"
                android:textAlignment="center"
                android:layout_column="1"
                android:layout_row="1"
                android:layout_columnWeight="5"
                android:layout_rowWeight="3" />

            <Space
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_rowWeight="1" />

            <Space
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="2"
                android:layout_rowWeight="1" />

        </GridLayout>

        <GridLayout
            android:id="@+id/gridLayoutSwipeInsert"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="5"
            android:layout_rowWeight="3" >

            <Space
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:layout_rowWeight="1" />

            <Space
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_rowWeight="5" />

            <ImageView
                android:id="@+id/imageViewSwipe"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_column="1"
                android:layout_columnWeight="3"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:src="@drawable/swipe" />

            <ImageView
                android:id="@+id/imageViewInsert"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_column="3"
                android:layout_columnWeight="3"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:src="@drawable/insert_card_logo" />

            <Space
                android:layout_column="4"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_rowWeight="1" />

            <Space
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="2"
                android:layout_rowWeight="1" />

        </GridLayout>

        <GridLayout
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="6"
            android:layout_rowWeight="2" >

            <Space
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:layout_rowWeight="1" />

            <Space
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_rowWeight="1" />

            <Button
                android:id="@+id/buttonCancel"
                android:background="@drawable/button_round"
                android:text="@string/wait_card_cancel"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:autoSizeTextType="uniform"
                android:textAlignment="center"
                android:paddingBottom="10dp"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:layout_column="1"
                android:layout_row="1"
                android:layout_columnWeight="7"
                android:layout_rowWeight="3" />

            <Space
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_rowWeight="1" />

            <Space
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="3"
                android:layout_rowWeight="3" />

        </GridLayout>

        <include
            layout="@layout/version_name_section_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="0dp"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="6"
            android:layout_rowWeight="1"  />

    </GridLayout>

</LinearLayout>