<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".DemoActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Space
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_rowWeight="1" />

        <GridLayout
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_rowWeight="2" >

            <Space
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:layout_rowWeight="1" />

            <TextView
                android:id="@+id/textViewPanMsg"
                android:text="Enter PAN"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:textColor="@color/black"
                android:autoSizeTextType="uniform"
                android:gravity="center|bottom"
                android:textAlignment="gravity"
                android:layout_column="2"
                android:layout_row="1"
                android:layout_columnWeight="30"
                android:layout_rowWeight="7" />

            <Space
                android:layout_column="3"
                android:layout_columnWeight="1"
                android:layout_row="2"
                android:layout_rowWeight="1" />

        </GridLayout>

        <GridLayout
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:layout_rowWeight="1" >

            <Space
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_rowWeight="1" />

            <TextView
                android:id="@+id/textViewPan"
                android:text=""
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:autoSizeTextType="uniform"
                android:textAlignment="center"
                android:layout_column="2"
                android:layout_row="1"
                android:layout_columnWeight="30"
                android:layout_rowWeight="3" />

            <Space
                android:layout_column="3"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_rowWeight="1" />
        </GridLayout>

        <Space
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="3"
            android:layout_rowWeight="1" />

        <GridLayout
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="4"
            android:layout_rowWeight="8" >

            <Space
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:layout_rowWeight="2" />

            <Space
                android:layout_column="0"
                android:layout_columnWeight="2"
                android:layout_row="1"
                android:layout_rowWeight="4" />

            <Button
                android:id="@+id/buttonPan1"
                android:layout_column="1"
                android:layout_columnWeight="2"
                android:layout_row="1"
                android:layout_rowWeight="4"
                android:text="1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:shadowColor="@color/black"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:textColor="@color/black"
                android:autoSizeTextType="uniform" />

            <Space
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_rowWeight="2" />

            <Button
                android:id="@+id/buttonPan2"
                android:layout_column="3"
                android:layout_columnWeight="2"
                android:layout_row="1"
                android:layout_rowWeight="4"
                android:text="2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:textColor="@color/black"
                android:autoSizeTextType="uniform" />

            <Space
                android:layout_column="4"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_rowWeight="2" />

            <Button
                android:id="@+id/buttonPan3"
                android:layout_column="5"
                android:layout_columnWeight="2"
                android:layout_row="1"
                android:layout_rowWeight="4"
                android:text="3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:textColor="@color/black"
                android:autoSizeTextType="uniform" />

            <Space
                android:layout_column="6"
                android:layout_columnWeight="2"
                android:layout_row="1"
                android:layout_rowWeight="2" />

            <Space
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="2"
                android:layout_rowWeight="1" />
            <Button
                android:id="@+id/buttonPan4"
                android:layout_column="1"
                android:layout_columnWeight="2"
                android:layout_row="3"
                android:layout_rowWeight="4"
                android:text="4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:textColor="@color/black"
                android:autoSizeTextType="uniform" />

            <Button
                android:id="@+id/buttonPan5"
                android:layout_column="3"
                android:layout_columnWeight="2"
                android:layout_row="3"
                android:layout_rowWeight="4"
                android:text="5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:elevation="10dp"
                android:textColor="@color/black"
                android:autoSizeTextType="uniform" />

            <Space
                android:layout_column="4"
                android:layout_columnWeight="1"
                android:layout_row="3"
                android:layout_rowWeight="2" />

            <Button
                android:id="@+id/buttonPan6"
                android:layout_column="5"
                android:layout_columnWeight="2"
                android:layout_row="3"
                android:layout_rowWeight="4"
                android:text="6"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:textColor="@color/black"
                android:autoSizeTextType="uniform" />
            <Space
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="4"
                android:layout_rowWeight="1" />

            <Button
                android:id="@+id/buttonPan7"
                android:layout_column="1"
                android:layout_columnWeight="2"
                android:layout_row="5"
                android:layout_rowWeight="4"
                android:text="7"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:textColor="@color/black"
                android:autoSizeTextType="uniform" />

            <Space
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_row="5"
                android:layout_rowWeight="2" />

            <Button
                android:id="@+id/buttonPan8"
                android:layout_column="3"
                android:layout_columnWeight="2"
                android:layout_row="5"
                android:layout_rowWeight="4"
                android:text="8"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:textColor="@color/black"
                android:autoSizeTextType="uniform" />

            <Space
                android:layout_column="4"
                android:layout_columnWeight="1"
                android:layout_row="5"
                android:layout_rowWeight="2" />

            <Button
                android:id="@+id/buttonPan9"
                android:layout_column="5"
                android:layout_columnWeight="2"
                android:layout_row="5"
                android:layout_rowWeight="4"
                android:text="9"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:textColor="@color/black"
                android:autoSizeTextType="uniform" />

            <Space
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="6"
                android:layout_rowWeight="1" />

            <GridLayout
                android:layout_column="1"
                android:layout_columnWeight="2"
                android:layout_row="7"
                android:layout_rowWeight="9" >

                <Space
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_row="0"
                    android:layout_rowWeight="2" />

                <Button
                    android:id="@+id/buttonPanX"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_row="1"
                    android:layout_rowWeight="3"
                    android:text="X"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:textColor="@color/black"
                    android:autoSizeTextType="uniform" />

                <Space
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_row="2"
                    android:layout_rowWeight="2" />

            </GridLayout>

            <Space
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_row="7"
                android:layout_rowWeight="2" />

            <GridLayout
                android:layout_column="3"
                android:layout_columnWeight="2"
                android:layout_row="7"
                android:layout_rowWeight="4" >

                <Button
                    android:id="@+id/buttonPan0"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_row="0"
                    android:layout_rowWeight="6"
                    android:text="0"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:textColor="@color/black"
                    android:autoSizeTextType="uniform" />

                <Space
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_row="1"
                    android:layout_rowWeight="1" />

                <Button
                    android:id="@+id/buttonPanDel"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_row="2"
                    android:layout_rowWeight="6"
                    android:text="D"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:textColor="@color/black"
                    android:autoSizeTextType="uniform" />

            </GridLayout>


            <Space
                android:layout_column="4"
                android:layout_columnWeight="1"
                android:layout_row="7"
                android:layout_rowWeight="2" />

            <GridLayout
                android:layout_column="5"
                android:layout_columnWeight="2"
                android:layout_row="7"
                android:layout_rowWeight="4" >

                <Space
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_row="0"
                    android:layout_rowWeight="2" />

                <Button
                    android:id="@+id/buttonPanValidate"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_row="1"
                    android:layout_rowWeight="3"
                    android:text="V"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:textColor="@color/black"
                    android:autoSizeTextType="uniform" />

                <Space
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_row="2"
                    android:layout_rowWeight="2" />

            </GridLayout>

            <Space
                android:layout_column="6"
                android:layout_columnWeight="1"
                android:layout_row="7"
                android:layout_rowWeight="2" />

            <Space
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="8"
                android:layout_rowWeight="2" />

        </GridLayout>

        <include
            layout="@layout/version_name_section_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="0dp"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="5"
            android:layout_rowWeight="1"  />

    </GridLayout>

</LinearLayout>