<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="0dp"
    tools:context=".transactionView.components.WaitCardFragment">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">

        <GridLayout
            android:id="@+id/gridLayoutLeds"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1">
            <Space
                android:layout_height="57dp"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="4" />

            <ImageView
                android:id="@+id/led1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:src="@drawable/led_selector" />

            <Space
                android:layout_rowWeight="1"
                android:layout_column="2"
                android:layout_columnWeight="1" />

            <ImageView
                android:id="@+id/led2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_column="3"
                android:layout_columnWeight="1"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/led_selector" />

            <Space
                android:layout_rowWeight="1"
                android:layout_column="4"
                android:layout_columnWeight="1" />

            <ImageView
                android:id="@+id/led3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_column="5"
                android:layout_columnWeight="1"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/led_selector" />

            <Space
                android:layout_rowWeight="1"
                android:layout_column="6"
                android:layout_columnWeight="1" />

            <ImageView
                android:id="@+id/led4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_column="7"
                android:layout_columnWeight="1"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/led_selector" />

            <Space
                android:layout_rowWeight="1"
                android:layout_column="8"
                android:layout_columnWeight="4" />
        </GridLayout>
        <GridLayout
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1">

            <Space
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1" />

            <TextView
                android:id="@+id/textViewAmount"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="30"
                android:autoSizeTextType="uniform"
                android:gravity="center|top"
                android:text="$ 0.00"
                android:textAlignment="gravity"
                android:textColor="@color/black" />
            <Space
                android:layout_rowWeight="1"
                android:layout_column="3"
                android:layout_columnWeight="1" />

        </GridLayout>
        <GridLayout
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1">

            <Space
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1" />

            <TextView
                android:id="@+id/textViewMsg"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="5"
                android:autoSizeMaxTextSize="20sp"
                android:autoSizeTextType="uniform"
                android:inputType="textMultiLine|textNoSuggestions"
                android:text="Tap, insert or swipe card"
                android:textAlignment="center" />

            <Space
                android:layout_rowWeight="1"
                android:layout_column="2"
                android:layout_columnWeight="1" />
        </GridLayout>
        <GridLayout
            android:id="@+id/gridLayoutSwipeInsert"
            android:layout_row="3"
            android:layout_rowWeight="3"
            android:layout_column="0"
            android:layout_columnWeight="1">

            <Space
                android:layout_rowWeight="5"
                android:layout_column="0"
                android:layout_columnWeight="1" />

            <ImageView
                android:id="@+id/imageViewSwipe"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="3"
                android:src="@drawable/swipe" />

            <ImageView
                android:id="@+id/imageViewInsert"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_column="3"
                android:layout_columnWeight="3"
                android:src="@drawable/insert_card_logo" />

            <Space
                android:layout_rowWeight="1"
                android:layout_column="4"
                android:layout_columnWeight="1" />

            <Space
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1" />

        </GridLayout>
        <GridLayout
            android:id="@+id/gridLayoutNFC"
            android:layout_row="4"
            android:layout_rowWeight="4"
            android:layout_column="0"
            android:layout_columnWeight="1">

            <Space
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="2" />

            <Space
                android:layout_rowWeight="1"
                android:layout_column="2"
                android:layout_columnWeight="2" />

        </GridLayout>
        <GridLayout
            android:layout_row="5"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1">

            <Space
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1" />

            <Button
                android:id="@+id/buttonCancel"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="3"
                android:layout_column="1"
                android:layout_columnWeight="7"
                android:autoSizeTextType="uniform"
                android:background="@drawable/button_round"
                android:paddingBottom="10dp"
                android:text="@string/wait_card_cancel"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="#FFFFFF" />

            <Space
                android:layout_rowWeight="1"
                android:layout_column="2"
                android:layout_columnWeight="1" />
        </GridLayout>
    </GridLayout>

    <ImageView
        android:id="@+id/imageViewNFC"
        android:layout_width="150dp"
        android:layout_height="200px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="416px"
        android:contentDescription="@string/wait_card_logo"
        android:src="@drawable/nfc_logo_centered" />

</RelativeLayout>