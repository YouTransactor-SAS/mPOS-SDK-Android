<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".DemoActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_rowWeight="1" >

            <Space
                android:layout_column="0"
                android:layout_columnWeight="3"
                android:layout_row="0"
                android:layout_rowWeight="1" />

            <TextView
                android:text="NFC"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:textColor="@color/black"
                android:gravity="center|bottom"
                android:textAlignment="gravity"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1" />

            <TextView
                android:text="SMC"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:textColor="@color/black"
                android:gravity="center|bottom"
                android:textAlignment="gravity"
                android:layout_column="3"
                android:layout_row="0"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1" />

            <TextView
                android:text="MSR"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:textColor="@color/black"
                android:gravity="center|bottom"
                android:textAlignment="gravity"
                android:layout_column="5"
                android:layout_row="0"
                android:layout_columnWeight="1"
                android:layout_rowWeight="2" />

            <CheckBox
                android:id="@+id/checkBoxInterfaceNFC"
                android:layout_gravity="center|top"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_rowWeight="1" />

            <CheckBox
                android:id="@+id/checkBoxInterfaceSMC"
                android:layout_gravity="center|top"
                android:layout_column="3"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_rowWeight="1" />

            <CheckBox
                android:id="@+id/checkBoxInterfaceMSR"
                android:layout_gravity="center|top"
                android:layout_column="5"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_rowWeight="1" />

            <Space
                android:layout_column="6"
                android:layout_columnWeight="3"
                android:layout_row="0"
                android:layout_rowWeight="1" />

        </GridLayout>

        <GridLayout
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_rowWeight="2" >

            <Space
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:layout_rowWeight="1" />

            <TextView
                android:id="@+id/textViewAmount"
                android:text="USD 0.00"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:textColor="@color/black"
                android:autoSizeTextType="uniform"
                android:gravity="center|bottom"
                android:textAlignment="gravity"
                android:layout_column="2"
                android:layout_row="1"
                android:layout_columnWeight="30"
                android:layout_rowWeight="7" />

            <Space
                android:layout_column="3"
                android:layout_columnWeight="1"
                android:layout_row="2"
                android:layout_rowWeight="1" />

        </GridLayout>

        <GridLayout
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:layout_rowWeight="1" >

            <Space
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_rowWeight="1" />

            <TextView
                android:id="@+id/textViewEnterAmount"
                android:text="Enter amount"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:autoSizeTextType="uniform"
                android:textAlignment="center"
                android:layout_column="2"
                android:layout_row="1"
                android:layout_columnWeight="30"
                android:layout_rowWeight="3" />

            <Space
                android:layout_column="3"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_rowWeight="1" />
        </GridLayout>

        <Space
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="3"
            android:layout_rowWeight="1" />

        <GridLayout
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="4"
            android:layout_rowWeight="7" >

            <Space
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="0"
                android:layout_rowWeight="2" />

            <Space
                android:layout_column="0"
                android:layout_columnWeight="2"
                android:layout_row="1"
                android:layout_rowWeight="4" />

            <Button
                android:id="@+id/button1"
                android:layout_column="1"
                android:layout_columnWeight="2"
                android:layout_row="1"
                android:layout_rowWeight="4"
                android:text="1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:shadowColor="@color/black"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:textColor="@color/black"
                android:autoSizeTextType="uniform" />

            <Space
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_rowWeight="2" />

            <Button
                android:id="@+id/button2"
                android:layout_column="3"
                android:layout_columnWeight="2"
                android:layout_row="1"
                android:layout_rowWeight="4"
                android:text="2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:textColor="@color/black"
                android:autoSizeTextType="uniform" />

            <Space
                android:layout_column="4"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_rowWeight="2" />

            <Button
                android:id="@+id/button3"
                android:layout_column="5"
                android:layout_columnWeight="2"
                android:layout_row="1"
                android:layout_rowWeight="4"
                android:text="3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:textColor="@color/black"
                android:autoSizeTextType="uniform" />

            <Space
                android:layout_column="6"
                android:layout_columnWeight="2"
                android:layout_row="1"
                android:layout_rowWeight="2" />

            <Space
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="2"
                android:layout_rowWeight="1" />
            <Button
                android:id="@+id/button4"
                android:layout_column="1"
                android:layout_columnWeight="2"
                android:layout_row="3"
                android:layout_rowWeight="4"
                android:text="4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:textColor="@color/black"
                android:autoSizeTextType="uniform" />

            <Button
                android:id="@+id/button5"
                android:layout_column="3"
                android:layout_columnWeight="2"
                android:layout_row="3"
                android:layout_rowWeight="4"
                android:text="5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:elevation="10dp"
                android:textColor="@color/black"
                android:autoSizeTextType="uniform" />

            <Space
                android:layout_column="4"
                android:layout_columnWeight="1"
                android:layout_row="3"
                android:layout_rowWeight="2" />

            <Button
                android:id="@+id/button6"
                android:layout_column="5"
                android:layout_columnWeight="2"
                android:layout_row="3"
                android:layout_rowWeight="4"
                android:text="6"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:textColor="@color/black"
                android:autoSizeTextType="uniform" />
            <Space
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="4"
                android:layout_rowWeight="1" />

            <Button
                android:id="@+id/button7"
                android:layout_column="1"
                android:layout_columnWeight="2"
                android:layout_row="5"
                android:layout_rowWeight="4"
                android:text="7"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:textColor="@color/black"
                android:autoSizeTextType="uniform" />

            <Space
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_row="5"
                android:layout_rowWeight="2" />

            <Button
                android:id="@+id/button8"
                android:layout_column="3"
                android:layout_columnWeight="2"
                android:layout_row="5"
                android:layout_rowWeight="4"
                android:text="8"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:textColor="@color/black"
                android:autoSizeTextType="uniform" />

            <Space
                android:layout_column="4"
                android:layout_columnWeight="1"
                android:layout_row="5"
                android:layout_rowWeight="2" />

            <Button
                android:id="@+id/button9"
                android:layout_column="5"
                android:layout_columnWeight="2"
                android:layout_row="5"
                android:layout_rowWeight="4"
                android:text="9"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:textColor="@color/black"
                android:autoSizeTextType="uniform" />

            <Space
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="6"
                android:layout_rowWeight="1" />

            <Button
                android:id="@+id/button0"
                android:layout_column="1"
                android:layout_columnWeight="2"
                android:layout_row="7"
                android:layout_rowWeight="4"
                android:text="0"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:textColor="@color/black"
                android:autoSizeTextType="uniform" />

            <Space
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_row="7"
                android:layout_rowWeight="2" />

            <Button
                android:id="@+id/button00"
                android:layout_column="3"
                android:layout_columnWeight="2"
                android:layout_row="7"
                android:layout_rowWeight="4"
                android:text="00"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:textColor="@color/black"
                android:autoSizeTextType="uniform" />

            <Space
                android:layout_column="4"
                android:layout_columnWeight="1"
                android:layout_row="7"
                android:layout_rowWeight="2" />

            <Button
                android:id="@+id/buttonDel"
                android:layout_column="5"
                android:layout_columnWeight="2"
                android:layout_row="7"
                android:layout_rowWeight="4"
                android:text="-"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:textColor="@color/black"
                android:autoSizeTextType="uniform" />

            <Space
                android:layout_column="6"
                android:layout_columnWeight="1"
                android:layout_row="7"
                android:layout_rowWeight="2" />

            <Space
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="8"
                android:layout_rowWeight="2" />

        </GridLayout>

        <GridLayout
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="5"
            android:layout_rowWeight="2" >

            <Space
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_rowWeight="1" />

            <Button
                android:id="@+id/buttonPay"
                android:background="@drawable/button_round"
                android:text="pay"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:autoSizeTextType="uniform"
                android:textAlignment="center"
                android:paddingBottom="10dp"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:layout_column="1"
                android:layout_row="1"
                android:layout_columnWeight="7"
                android:layout_rowWeight="3" />

            <Space
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_rowWeight="1" />

            <Space
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_row="3"
                android:layout_rowWeight="3" />

        </GridLayout>

        <include
            layout="@layout/version_name_section_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="0dp"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="5"
            android:layout_rowWeight="1"  />

    </GridLayout>

</LinearLayout>